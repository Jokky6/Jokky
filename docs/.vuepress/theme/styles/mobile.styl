@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 15px
    width $mobileSidebarWidth
  .page
    padding-left $mobileSidebarWidth
    .main-page 
      top 0 
  .navbar
    left 0
  .theme-container:not(.no-sidebar)
    .navbar
      left $mobileSidebarWidth
// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    top 0
    padding-top $navbarHeight
    transform translateX(-100%)
    transition transform .2s ease
  .page
    padding-left 0
    .main-page 
      top 0 
  .theme-container:not(.no-sidebar)
    .navbar
      left 0
  .navbar
    padding-left 0  
  .theme-container
    &.sidebar-open
      .sidebar
        transform translateX(0)
        transform none
    &.no-navbar
      .sidebar
        padding-top: 0

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.9rem
  .content
    div[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
