@require './config'

$mobileSidebarWidth = $sidebarWidth *0.8
  
// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 12px
    width $mobileSidebarWidth
    margin 0
    padding 0 1rem
  .page
    padding-left $mobileSidebarWidth
    padding-right 0
  .navbar
    left 200px

// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    top 0
    padding-top $navbarHeight
    padding 0 1rem
    background $navBgColor
    transform translateX(-100%)
    transition transform .2s ease
  .page
    padding-left 0
    padding-right 0
  .main-page
    top 3.6rem
  .theme-container
    &.sidebar-open
      .sidebar
        transform translateX(0)
    &.no-navbar
      .sidebar
        padding-top: 0
  .navbar
    position fixed
    left 0

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.9rem
  .content
    div[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
